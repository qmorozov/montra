{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@screens/*": ["src/screens/*"],
      "@locales/*": ["src/locales/*"],
      "@assets/*": ["assets/*"]
    }
  },
}
